<h1 class="my-4">Editar Tarefa</h1>
<% if @task.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@task.errors.count, "erro") %> impedem que essa tarefa seja criada:</h4>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @task, local: true, class: 'form') do |form| %>
  <div class="mb-3">
    <%= form.label :title, "TÃ­tulo", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Digite o tÃ­tulo da tarefa' %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Status", class: 'form-label' %>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :url, "URL para Web Scraping", class: 'form-label' %>
    <%= form.text_field :url, class: 'form-control', placeholder: 'Insira a URL' %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to 'Voltar', tasks_path, class: 'btn btn-secondary' %>
    <%= form.submit "Atualizar Tarefa", class: 'btn btn-primary' %>
  </div>
<% end %>
