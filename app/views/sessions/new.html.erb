<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Digite seu e-mail' %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Digite sua senha' %>
  </div>

  <div>
    <%= form.submit 'Entrar', class: 'btn btn-primary w-100' %>
  </div>
<% end %>

<div class="d-flex justify-content-between mt-3">
  <%= link_to 'Registrar', register_path, class: 'btn btn-primary w-100' %>
</div>

<footer class="mt-4">
  <p>C2S - Gestão de Contatos © 2016-2024</p>
</footer>